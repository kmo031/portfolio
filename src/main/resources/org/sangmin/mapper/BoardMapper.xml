<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sangmin.mapper.BoardMapper">

	<!-- 게시판 목록 가져오기  -->
	<select id="getBoardList" resultType="org.sangmin.domain.BoardDTO">
		SELECT * FROM tbl_board WHERE type='BOARD'
	</select>
	
	<!-- 공지사항 목록 가져오기 -->
	<select id="getNoticeList" resultType="org.sangmin.domain.BoardDTO">
		SELECT * FROM tbl_board WHERE type='NOTICE'
	</select>
	<select id="read" resultType="org.sangmin.domain.BoardDTO">
		SELECT * FROM tbl_board WHERE id = #{id}
	</select>


</mapper>